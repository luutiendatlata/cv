@model Demo5.Models.Post

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    #imgName{
        display: none;
    }
    #userId {
        display: none;
    }
    #postedTime {
        display: none;
    }
</style>
<h1>Edit</h1>

<h4>Post</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="title" class="control-label"></label>
                <input asp-for="title" class="form-control" />
                <span asp-validation-for="title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="categoryId" class="control-label"></label>
                <select asp-for="categoryId" class="form-control" asp-items="ViewBag.categories"></select>
                <span asp-validation-for="categoryId" class="text-danger"></span>
            </div>
            <div id="postedTime" class="form-group">
                <label asp-for="postTime" class="control-label"></label>
                <input type="datetime-local" asp-for="postTime" class="form-control" />
                <span asp-validation-for="postTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="content" class="control-label"></label>
                <input asp-for="content" class="form-control" />
                <span asp-validation-for="content" class="text-danger"></span>
            </div>
            <div id="imgName" class="form-group">
                @*<label asp-for="imageName" class="col-md-2 control-label">Upload Image</label>*@
                <input asp-for="imageName" class="form-control" />
                <span asp-validation-for="imageName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="imageName" class="col-md-2 control-label">Upload Image</label>
                <div class="col-md-10">
                    <input asp-for="imageName" class="form-control" type="file" accept="image/*" />
                </div>
                <span asp-validation-for="imageName" class="text-danger"></span>
            </div>
            @*<div class="form-group">
            <label class="col-md-2 control-label">Upload Image</label>
            <div class="col-md-10">
                <input class="form-control" type="file" accept="image/*" />
            </div>
            <span class="text-danger"></span>
        </div>*@
            <div id="userId" class="form-group">
                <label asp-for="userId" class="control-label"></label>
                <select asp-for="userId" class="form-control" asp-items="ViewBag.userId"></select>
                <span asp-validation-for="userId" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
