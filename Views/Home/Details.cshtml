@model Demo5.Models.Post

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager
<h1>Details</h1>
<div id="content" />
<script src="~/js/hello.js"></script>


<div class="col-sm-8">
    <h2>@Html.DisplayFor(model => model.title)</h2>
    <i>Written by  @Html.DisplayFor(model => model.user.UserName),  @Html.DisplayFor(model => model.postTime)</i>
    <h6>Category:  @Html.DisplayFor(model => model.category.name)</h6>
    <img style="max-width:80%;" src="~/img/@Html.ValueFor(model=>model.imageName)" alt="Image">
    <p>@Html.DisplayFor(model => model.content)</p>

</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
<hr />
<div>
    <h4>Comments</h4>

    <div class="row">
        <div class="col-md-4">

            <form asp-action="Details" asp-route-id="@Model.Id">
                <div class="text-danger"></div>
                <div class="form-group">
                    <label class="control-label">Insert new comment</label>
                    <input type="text" id="txtContent" name="content" class="form-control" />
                    <span class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Comment" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
    <table class="table">

        <tbody>
            @foreach (var item in ViewBag.Comments)
            {
                <tr>
                    <td>
                        <b>@item.user.UserName</b>
                    </td>
                    <td>
                        @item.content
                    </td>
                    @if (SignInManager.IsSignedIn(User))
                    {
                        @if (item.user.Id == ViewBag.User)
                        {
                            <td>
                                <a asp-controller="Comments" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                                <a asp-controller="Comments" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                            </td>
                        }

                    }
                </tr>

            }
        </tbody>
    </table>
</div>
